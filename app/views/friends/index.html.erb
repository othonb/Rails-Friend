
<h1>All My Friends</h1>

<div id="friends">
  <table class="table table-striped table-bordered table-hover" >
    <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Twitter</th>
      <th scope="col" style="width: 150px">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <th scope="row"><%= friend.id %></th>
        <td><%= link_to friend.first_name, friend, method: :get %></td>
        <td><%= link_to friend.last_name, friend, method: :get %></td>
        <td><%= link_to friend.email, friend, method: :get %></td>
        <td><%= link_to friend.phone, friend, method: :get %></td>
        <td><%= link_to friend.twitter, friend, method: :get %></td>
        <td>
          <%= link_to "", edit_friend_path(friend), class:"btn btn-primary fa fa-edit" %>
          <%= button_to "", friend, method: :delete, onclick: "return confirm('Are you sure?')", class: "btn btn-danger fa fa-trash", form: {style: 'display:inline-block;'} %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>



</div>

<%= link_to " New friend", new_friend_path, class:"btn btn-secondary fa fa-plus-circle" %>
